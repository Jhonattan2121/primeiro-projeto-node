{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "rootDir": "./src",
"esModuleInterop": true,
"forceConsistentCasingInFileNames": true,
"strictNullChecks": false,
"skipLibCheck": true
}

}